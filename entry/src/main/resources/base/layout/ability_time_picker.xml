<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <TimePicker
        ohos:id="$+id:time_picker"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:normal_text_color="#007DFF"
        ohos:normal_text_size="20fp"
        ohos:selected_text_color="$color:color_black"
        ohos:selected_text_size="20fp"
        ohos:operated_text_color="$color:color_gold"
        ohos:selected_normal_text_margin_ratio="10"
        ohos:shader_color="$color:color_sky_blue"
        ohos:bottom_line_element="$color:color_sky_blue"
        ohos:mode_24_hour="false"
        ohos:am_pm_order="right"/>

</DirectionalLayout>